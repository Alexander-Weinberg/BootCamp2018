    "def system(param, *args):\n",
    "    \n",
    "    weights, x_vec = np.split(param, 2)\n",
    "    a,b,N = args\n",
    "    # LHS\n",
    "    h = lambda x,i: x ** i \n",
    "    H = lambda x,i: (x ** (i+1)) / (i + 1)\n",
    "    integrals = np.array([H(b,i) - H(a,i) for i in range(2*N-1)])\n",
    "\n",
    "    # RHS\n",
    "    mult_weight = lambda x, wgt, n, i: wgt[n] * h(x[n], i) \n",
    "    \n",
    "    sum_weight =np.zeros(2*N-1) # initialize array\n",
    "    for i in range(2*N-1):\n",
    "        sum_weight[i] = np.array([mult_weight(x_vec,weights,n,i) for n in range(N)]).sum()\n",
    "    \n",
    "    error = np.abs(sum_weight)\n",
    "    return error\n",
    "\n",
    "def gauss_quad(func, *args):\n",
    "    a, b, N = args\n",
    "    \n",
    "    weight_guess = np.ones(2*N-1)\n",
    "    x_guess = np.ones(2*N-1)\n",
    "    param_guess = [weight_guess, x_guess]\n",
    "    \n",
    "    result = opt.minimize(system, param_guess, args=args)\n",
    "    return result\n",
    "    "
   ]
