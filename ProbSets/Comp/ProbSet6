    "def discretize_normal(mu, sigma, N):\n",
    "    a = mu - 3*sigma\n",
    "    b = mu + 3*sigma\n",
    "    \n",
    "    z_nodes = np.array([a+(2*i + 1)*(b - a)/(2*N) for i in range(N+1)])\n",
    "\n",
    "    pdf = lambda z: sts.norm.pdf(z,loc=mu,scale=sigma)\n",
    "    zmin = lambda i: (z_nodes[i-1] + z_nodes[i]) / 2\n",
    "    zmax = lambda i: (z_nodes[i] + z_nodes[i+1]) / 2\n",
    "\n",
    "    weights = [(quad(pdf, zmin(i), zmax(i))) for i in range(1,len(z_nodes)-1)]\n",
    "    \n",
    "    cdf = lambda i: sts.norm.cdf(zmin(i), loc=mu, scale=sigma)\n",
    "    weights.append(1 - cdf(N))\n",
    "    weights.insert(0, cdf(2))\n",
    "    \n",
    "    return z_nodes, weights\n",
    "        "
   ]
