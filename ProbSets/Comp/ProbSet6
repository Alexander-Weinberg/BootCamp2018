    "def numer_integrate(fun, a, b, method='Simpsons', N=1000):\n",
    "    \n",
    "    if method == 'midpoint':\n",
    "        domain = np.array([a+(2*i + 1)*(b - a)/(2*N) for i in range(N)])\n",
    "        integ = fun(domain).sum() * (b - a) / N\n",
    "        \n",
    "    elif method == 'trapezoid':\n",
    "        domain = np.array([a + i*(b-a)/N for i in range(N)])\n",
    "        integ = fun(domain[0]) + (2 * fun(domain[1:-1]).sum()) + fun(domain[-1])\n",
    "        integ = integ * (b-a) / (2*N)\n",
    "    \n",
    "    elif method == 'Simpsons':\n",
    "        ####!!!! COME BACK AND FIX ME !!!! ######\n",
    "        domain_odd = np.array([a + i * (b-a) / (2 * N) for i in range(1, 2*N - 1, 2)])\n",
    "        domain_even = np.array([a + i * (b-a) / (2 * N) for i in range(2, 2*N - 2, 2)])\n",
    "        integ = 4*fun(domain_odd).sum() + 2*fun(domain_even).sum() + fun(a) + fun(b)\n",
    "        integ = integ * (b-a) / (6*(N+1))\n",
    "    \n",
    "    return integ\n",
    "\n",
    "\n",
    "g = lambda x: 0.1*(x**4) - 1.5*(x**3) + 0.53*x**2 + 2*x + 1"
   ]
  },
